<Window x:Class="KAP_InventoryManager.View.Modals.ViewPaymentModalView"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KAP_InventoryManager.View.Modals"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:customcontrols="clr-namespace:KAP_InventoryManager.CustomControls"
        xmlns:viewModel="clr-namespace:KAP_InventoryManager.ViewModel.ModalViewModels"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="" Width="800" Height="600"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent">

    <Window.DataContext>
        <viewModel:ViewPaymentModalViewModel/>
    </Window.DataContext>

    <Border Background="{StaticResource Color2}" CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Control Bar -->
            <StackPanel x:Name="pnlControlBar"
                        Grid.Row="0"
                        Orientation="Horizontal"
                        FlowDirection="RightToLeft"
                        Background="{StaticResource Color2}"
                        Height="25"
                        MouseLeftButtonDown="pnlControlBar_MouseLeftButtonDown">
                <Button x:Name="btnClose"
                        Style="{StaticResource controlBarButton}"
                        Click="btnClose_Click">
                    <fa:IconImage Icon="Xmark"
                      Style="{StaticResource controlBarButtonIcon}"/>
                </Button>
            </StackPanel>

            <!-- Header and Summary Panel -->
            <StackPanel Grid.Row="1" Margin="20,10,20,10">
                <DockPanel Margin="0,0,0,15">
                    <TextBlock Text="Payment History" Style="{StaticResource header}"
                               Margin="0,0,20,0"/>
                    <Border Background="{StaticResource Color3}"
                            CornerRadius="3"
                            Padding="8,2,8,2"
                            DockPanel.Dock="Right">
                        <TextBlock Text="{Binding Invoice.InvoiceNo}"
                                   Style="{StaticResource button-text}"
                                   HorizontalAlignment="Center"/>
                    </Border>
                </DockPanel>

                <!-- Payment Summary Panel -->
                <Border Background="{StaticResource Color1}"
                        CornerRadius="5"
                        Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Invoice Total"
                                       Style="{StaticResource regular-text}"
                                       FontSize="11"
                                       Opacity="0.7"/>
                            <TextBlock Text="{Binding PaymentSummary.InvoiceTotal, StringFormat='Rs. {0:N2}'}"
                                       Style="{StaticResource regular-text}"
                                       FontWeight="Bold"
                                       FontSize="16"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Total Paid"
                                       Style="{StaticResource regular-text}"
                                       FontSize="11"
                                       Opacity="0.7"/>
                            <TextBlock Text="{Binding PaymentSummary.TotalPaid, StringFormat='Rs. {0:N2}'}"
                                       Style="{StaticResource regular-text}"
                                       FontWeight="Bold"
                                       FontSize="16"
                                       Foreground="#4CAF50"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Remaining Balance"
                                       Style="{StaticResource regular-text}"
                                       FontSize="11"
                                       Opacity="0.7"/>
                            <TextBlock Text="{Binding PaymentSummary.RemainingBalance, StringFormat='Rs. {0:N2}'}"
                                       Style="{StaticResource regular-text}"
                                       FontWeight="Bold"
                                       FontSize="16"
                                       Foreground="#FF9800"/>
                        </StackPanel>

                        <StackPanel Grid.Column="3">
                            <TextBlock Text="Payment Count"
                                       Style="{StaticResource regular-text}"
                                       FontSize="11"
                                       Opacity="0.7"/>
                            <TextBlock Text="{Binding PaymentSummary.PaymentCount}"
                                       Style="{StaticResource regular-text}"
                                       FontWeight="Bold"
                                       FontSize="16"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- DataGrid for Payments -->
            <DataGrid Grid.Row="2"
                      Margin="20,0,20,10"
                      ItemsSource="{Binding Payments}"
                      SelectedItem="{Binding SelectedPayment}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="{Binding IsTableReadOnly}"
                      SelectionMode="Single"
                      HeadersVisibility="Column"
                      GridLinesVisibility="None"
                      Style="{StaticResource DataGridStyle}"
                      ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                      RowStyle="{StaticResource DataGridRowStyle}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Date"
                                        Binding="{Binding Date, StringFormat=dd-MM-yyyy, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Width="100"/>
                    <DataGridTextColumn Header="Type"
                                        Binding="{Binding PaymentType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Width="80"/>
                    <DataGridTextColumn Header="Amount"
                                        Binding="{Binding Amount, StringFormat='Rs. {0:N2}', Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Width="100"/>
                    <DataGridTextColumn Header="Receipt No"
                                        Binding="{Binding ReceiptNo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Width="120"/>
                    <DataGridTextColumn Header="Cheque No"
                                        Binding="{Binding ChequeNo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Width="120"/>
                    <DataGridTextColumn Header="Bank"
                                        Binding="{Binding Bank, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Width="*"/>
                    <DataGridTextColumn Header="Comment"
                                        Binding="{Binding Comment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Width="150"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="3"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="20,0,20,20">
                <Button Margin="0,0,12,0"
                        Style="{StaticResource DiscardButton}"
                        Command="{Binding AddPaymentCommand}">
                    <StackPanel Orientation="Horizontal" Margin="10,2,10,2">
                        <fa:IconImage Icon="CirclePlus" Style="{StaticResource AddButtonIcon}"/>
                        <TextBlock Text="Add Payment" Style="{StaticResource AddButtontext}"/>
                    </StackPanel>
                </Button>

                <Button Margin="0,0,12,0"
                        Style="{StaticResource DiscardButton}"
                        Command="{Binding EditPaymentCommand}">
                    <StackPanel Orientation="Horizontal" Margin="10,2,10,2">
                        <fa:IconImage Icon="FloppyDisk" Style="{StaticResource AddButtonIcon}"/>
                        <TextBlock Text="Save Changes" Style="{StaticResource AddButtontext}"/>
                    </StackPanel>
                </Button>

                <Button Margin="0,0,12,0"
                        Style="{StaticResource DeleteButton}"
                        Command="{Binding DeletePaymentCommand}">
                    <StackPanel Orientation="Horizontal" Margin="10,2,10,2">
                        <fa:IconImage Icon="TrashCan" Style="{StaticResource AddButtonIcon}"/>
                        <TextBlock Text="Delete" Style="{StaticResource AddButtontext}"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource AddButton}"
                        Command="{Binding RefreshCommand}">
                    <StackPanel Orientation="Horizontal" Margin="10,2,10,2">
                        <fa:IconImage Icon="RotateRight" Style="{StaticResource AddButtonIcon}"/>
                        <TextBlock Text="Refresh" Style="{StaticResource AddButtontext}"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>