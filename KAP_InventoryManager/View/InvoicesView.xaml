                        Grid.Row="1"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="Items" 
                                   Style="{StaticResource card-header}"
                                   Margin="0,0,0,0"
                                   VerticalAlignment="Center"/>

                        <Border BorderBrush="{StaticResource Color3}" 
                                BorderThickness="0,0,0,1.5" 
                                Margin="0,20,0,6">
                            <Grid  Margin="0,0,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="4*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="No."
                                           Style="{StaticResource table-header}"/>
                                <TextBlock Text="Part No."
                                           Style="{StaticResource table-header}"
                                           Grid.Column="1"/>
                                <TextBlock Text="Brand"
                                           Style="{StaticResource table-header}"
                                           Grid.Column="2"/>
                                <TextBlock Text="Description"
                                           Style="{StaticResource table-header}"
                                           Grid.Column="3"/>
                                <TextBlock Text="Qty"
                                           Style="{StaticResource table-header}"
                                           Grid.Column="4"/>
                                <TextBlock Text="Unit Price"
                                           Style="{StaticResource table-header}"
                                           Grid.Column="5"/>
                                <TextBlock Text="Dis%"
                                           Style="{StaticResource table-header}"
                                           Grid.Column="6"/>
                                <TextBlock Text="Amount"
                                           Style="{StaticResource table-header}"
                                           Grid.Column="7"/>
                            </Grid>
                        </Border>

