                                                   Grid.Column="2" Grid.Row="2"
                                                   Style="{StaticResource regular-text}"/>                                        

                                    </Grid>
                                </StackPanel>
                            </Border>

                            <Border BorderBrush="{StaticResource Color3}"
                                    BorderThickness="1.5"
                                    CornerRadius="8"
                                    Margin="20,0,0,0"
                                    Padding="20">
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Date n Time"
                                               Style="{StaticResource regular-text}"/>
                                    <TextBlock Text=":" Grid.Column="1"
                                               Style="{StaticResource regular-text}"/>
