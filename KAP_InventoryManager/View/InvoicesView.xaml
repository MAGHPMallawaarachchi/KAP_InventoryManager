                                               FontFamily="Inter"
                                               FontWeight="SemiBold"
                                               FontSize="14"
                                               VerticalAlignment="Center"
                                               Margin="10,0,10,0"/>
                                </Border>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        Grid.Column="1"
                                        HorizontalAlignment="Right">
                                <customcontrols:Button ButtonText="Cancel"
                                                       ButtonBackgroundColor="{StaticResource Red}"
                                                       ButtonIcon="Cancel"
                                                       Margin="0,0,12,0"/>
                                <customcontrols:Button ButtonText="Confirm Payment"
                                                       ButtonBackgroundColor="{StaticResource Blue}"
                                                       ButtonIcon="CircleCheck"/>
                            </StackPanel>
                        </Grid>

                        <StackPanel Orientation="Horizontal"
                                    Margin="0,20,0,0">
                            <Border BorderThickness="1.5" 
                                    BorderBrush="{StaticResource Color3}"
                                    CornerRadius="8">
