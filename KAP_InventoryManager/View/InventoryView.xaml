<UserControl x:Class="KAP_InventoryManager.View.InventoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KAP_InventoryManager.View"
             xmlns:locals="clr-namespace:KAP_InventoryManager.View"
             xmlns:viewModel="clr-namespace:KAP_InventoryManager.ViewModel"
             xmlns:panelModel ="clr-namespace:KAP_InventoryManager.ViewModel.InventoryPanelViewModels"
             xmlns:customcontrols="clr-namespace:KAP_InventoryManager.CustomControls"
             xmlns:panels ="clr-namespace:KAP_InventoryManager.View.InventoryViewPanels"
             mc:Ignorable="d" 
             d:DesignHeight="725" d:DesignWidth="1200">
    
    <UserControl.DataContext>
        <viewModel:InventoryViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <DataTemplate DataType="{x:Type panelModel:OverviewViewModel}">
            <panels:OverviewView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type panelModel:DetailsViewModel}">
            <panels:DetailsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type panelModel:TransactionsViewModel}">
            <panels:TransactionsView/>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Text="Inventory" Style="{StaticResource header}" 
           HorizontalAlignment="Left" VerticalAlignment="Center"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Height="30">
                <customcontrols:SearchBar Width="220"/>
                <customcontrols:Button
                    ButtonText="Filter"
                    ButtonBackgroundColor="{StaticResource Color3}"
                    ButtonIcon="Filter"
                    Margin="12,0,0,0"/>
                <customcontrols:Button
                    x:Name="AddItemButton"
                    ButtonText="Add Item"
                    ButtonBackgroundColor="{StaticResource Blue}"
                    ButtonIcon="Add"
                    Margin="12,0,0,0"
                    ButtonClickHandler="AddItemButton_Click"/>
            </StackPanel>
        </Grid>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <Border Margin="0,25,0,0" Background="{StaticResource Color2}" CornerRadius="8">
                <StackPanel Orientation="Vertical" Margin="20,20,20,20">
                    <TextBlock Text="Items" Style="{StaticResource card-header}"/>
                </StackPanel>
            </Border>
            <Grid Grid.Column="1" Margin="20,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Margin="26,0,0,0">
                    <RadioButton 
                        Style="{StaticResource panelButton}"
                        Cursor="Hand"
                        IsChecked="True"
                        Margin="0,0,8,0"
                        Command="{Binding ShowOverviewViewCommand}">
                        <TextBlock Text="Overview" 
                                   Style="{StaticResource button-text}"
                                   Margin="8"/>
                    </RadioButton>
                    <RadioButton 
                        Style="{StaticResource panelButton}"
                        Cursor="Hand"
                        Margin="0,0,8,0"
                        Command="{Binding ShowDetailsViewCommand}">
                        <TextBlock Text="Details" 
                                   Style="{StaticResource button-text}"
                                   Margin="8"/>
                    </RadioButton>
                    <RadioButton 
                        Style="{StaticResource panelButton}"
                        Cursor="Hand"
                        Margin="0,0,8,0"
                        Command="{Binding ShowTransactionsViewCommand}">
                        <TextBlock Text="Transactions" 
                                   Style="{StaticResource button-text}"
                                   Margin="8"/>
                    </RadioButton>
                </StackPanel>

                <ContentControl Grid.Row="1" 
                                Content="{Binding CurrentChildView}"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>


