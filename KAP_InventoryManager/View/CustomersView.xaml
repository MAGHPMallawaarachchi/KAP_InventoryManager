<UserControl x:Class="KAP_InventoryManager.View.CustomersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KAP_InventoryManager.View"
             xmlns:locals="clr-namespace:KAP_InventoryManager.View"
             xmlns:viewModel="clr-namespace:KAP_InventoryManager.ViewModel"
             xmlns:customcontrols="clr-namespace:KAP_InventoryManager.CustomControls"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="725" d:DesignWidth="1200">

    <UserControl.DataContext>
        <viewModel:CustomersViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <!-- ScrollBar Style -->
        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Background" Value="{StaticResource Color2}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="4"/>
                            <Track x:Name="PART_Track"
                                   IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Style>
                                            <Style TargetType="Thumb">
                                                <Setter Property="Background" Value="{StaticResource Color2}"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Thumb">
                                                            <Border Background="{TemplateBinding Background}"
                                                                    CornerRadius="4"
                                                                    Margin="2"/>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource Color3}"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Thumb.Style>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Customers" 
                       Style="{StaticResource header}" 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Center"/>

            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Right" 
                        Height="30">
                <customcontrols:Button
                    x:Name="DownloadCustomerInvoiceSummaryButton"
                    ButtonText="Customer Invoice Summary"
                    ButtonBackgroundColor="{StaticResource Blue}"
                    ButtonIcon="Download"
                    Margin="12,0,0,0" 
                    ButtonClickHandler="DownloadCustomerInvoiceSummaryButton_Click"/>
                <customcontrols:Button
                    x:Name="DownloadButton"
                    ButtonText="Download All Reports"
                    ButtonBackgroundColor="{StaticResource Blue}"
                    ButtonIcon="Download"
                    Margin="12,0,0,0" 
                    ButtonClickHandler="DownloadAllButton_Click"/>
                <customcontrols:Button
                    x:Name="AddCustomerButton"
                    ButtonText="Add Customer"
                    ButtonBackgroundColor="{StaticResource Blue}"
                    ButtonIcon="Add"
                    Margin="12,0,0,0" 
                    ButtonClickHandler="AddCustomerButton_Click"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.3*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Border Background="{StaticResource Color2}" CornerRadius="8">
                <Grid Margin="20,20,20,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    
                    <Border Background="{StaticResource Color3}"
                            CornerRadius="6">
                        <Grid Margin="8,4"
                              Height="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <fa:IconImage Icon="Search"
                                          Foreground="{StaticResource Color4}"
                                          Height="16"/>
                            <TextBox Text="{Binding SearchCustomerText, UpdateSourceTrigger=PropertyChanged}"
                                     Background="{StaticResource Color3}"
                                     BorderThickness="0"
                                     Grid.Column="1"
                                     Margin="8,0,0,0"
                                     Foreground="{StaticResource Color4}"
                                     FontFamily="Inter"
                                     FontSize="14"/>
                        </Grid>
                    </Border>

                    <Border BorderBrush="{StaticResource Color3}" 
                            BorderThickness="0,0,0,1.5" 
                            Margin="0,10,0,6" 
                            Grid.Row="1">
                        <Grid  Margin="0,0,0,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="8*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="No."
                                       Style="{StaticResource regular-text}"/>
                            <TextBlock Text="Name"
                                       Style="{StaticResource regular-text}"
                                       Grid.Column="1"/>
                        </Grid>
                    </Border>

                    <ListBox ItemsSource="{Binding Customers}" 
                             SelectedItem="{Binding SelectedCustomer, Mode=TwoWay}"
                             Background="Transparent"
                             BorderThickness="0"
                             BorderBrush="Transparent"
                             HorizontalContentAlignment="Stretch"
                             Cursor="Hand"
                             SelectionMode="Single"
                             Grid.Row="2">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="8*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding Id}"                   
                                               Style="{StaticResource regular-text}"/>

                                    <StackPanel Orientation="Vertical" Grid.Column="1">
                                        <Border Background="{StaticResource Color3}"
                                                CornerRadius="3"
                                                Padding="8,2,8,2"
                                                Margin="0,0,12,0"
                                                HorizontalAlignment="Left">
                                            <TextBlock Text="{Binding Name}"
                                                       Style="{StaticResource button-text}"/>
                                        </Border>
                                        
                                        <TextBlock Text="{Binding City}"                   
                                                   Style="{StaticResource light-text}"
                                                   Margin="2,5,0,0"/>
                                    </StackPanel>
        
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
            
            <Grid Grid.Column="1" Margin="20,0,0,0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="275"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Background="{StaticResource Color2}" CornerRadius="8" Margin="0,0,0,20" Padding="20">
                    <StackPanel Orientation="Vertical">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding CurrentCustomer.Name}" 
                                           Style="{StaticResource card-header}"
                                           Margin="0,0,0,0"
                                           VerticalAlignment="Center"/>

                                <Border Background="Transparent" 
                                        BorderBrush="{StaticResource Blue}"
                                        CornerRadius="5"
                                        BorderThickness="1.5"
                                        Height="25"
                                        VerticalAlignment="Center"
                                        Margin="20,0,0,0">
                                    <TextBlock Text="{Binding CurrentCustomer.PaymentType}" 
                                               Foreground="{StaticResource Blue}"
                                               FontFamily="Inter"
                                               FontWeight="SemiBold"
                                               FontSize="14"
                                               VerticalAlignment="Center"
                                               Margin="10,0,10,0"/>
                                </Border>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        Grid.Column="1"
                                        HorizontalAlignment="Right">

                                <Button Style="{StaticResource CustomButtonStyle}"
                                        Background="{StaticResource Blue}"
                                        Foreground="{StaticResource Color5}"
                                        Grid.Column="2"
                                        Click="DownloadButton_Click"
                                        Margin="0,0,10,0">
                                    <StackPanel Orientation="Horizontal"
                                                Margin="10,2,10,2">
                                        <fa:IconImage Icon="Download" Style="{StaticResource AddButtonIcon}"/>
                                        <TextBlock Text="Download" Style="{StaticResource AddButtontext}"/>
                                    </StackPanel>
                                </Button>

                                <customcontrols:Button
                                    ButtonText="Edit"
                                    ButtonBackgroundColor="{StaticResource Color3}"
                                    ButtonIcon="PenToSquare"
                                    ButtonClickHandler="EditButton_Click"/>
                                
                            </StackPanel>
                        </Grid>

                        <StackPanel Orientation="Horizontal"
                                    Margin="0,20,0,0">
                            <Border BorderThickness="1.5" 
                                    BorderBrush="{StaticResource Color3}"
                                    CornerRadius="8">
                                <StackPanel Orientation="Vertical" Margin="20">
                                    <Border Grid.Column="1"
                                            Background="{StaticResource Color3}"
                                            CornerRadius="3"
                                            Padding="8,2,8,2"
                                            HorizontalAlignment="Left">
                                        <TextBlock Text="{Binding CurrentCustomer.CustomerID}"
                                                   Style="{StaticResource button-text}"
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                    <Grid Height="90" Margin="0,15,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="Address"
                                                   Style="{StaticResource regular-text}"
                                                   VerticalAlignment="Top"/>
                                        <TextBlock Text=":" Grid.Column="1"
                                                   Style="{StaticResource regular-text}"
                                                   VerticalAlignment="Top"/>
                                        <StackPanel Orientation="Vertical"
                                                    Grid.Column="2">
                                            <TextBlock Text="{Binding CurrentCustomer.Address}" 
                                                       Style="{StaticResource regular-text}"/>
                                            <TextBlock Text="{Binding CurrentCustomer.City}" 
                                                       Style="{StaticResource regular-text}"/>                                            
                                        </StackPanel>

                                        <TextBlock Text="Phone No." Grid.Row="1"
                                                   Style="{StaticResource regular-text}"/>
                                        <TextBlock Text=":" Grid.Column="1" Grid.Row="1"
                                                   Style="{StaticResource regular-text}"/>
                                        <TextBlock Text="{Binding CurrentCustomer.ContactNo}" 
                                                   Grid.Column="2" Grid.Row="1"
                                                   Style="{StaticResource regular-text}"/>

                                        <TextBlock Text="Email" Grid.Row="2"
                                                   Style="{StaticResource regular-text}"/>
                                        <TextBlock Text=":" Grid.Column="1" Grid.Row="2"
                                                   Style="{StaticResource regular-text}"/>
                                        <TextBlock Text="{Binding CurrentCustomer.Email}" 
                                                   Grid.Column="2" Grid.Row="2"
                                                   Style="{StaticResource regular-text}"/>

                                    </Grid>
                                </StackPanel>
                            </Border>

                            <Border BorderBrush="{StaticResource Color3}"
                                    BorderThickness="1.5"
                                    CornerRadius="8"
                                    Margin="20,0,0,0"
                                    Padding="20">
                                <StackPanel Orientation="Horizontal">
                                    <Grid x:Name="CircularProgressBar" 
                                          Width="120" 
                                          Height="120">
                                        <lvc:PieChart x:Name="DebtChart" InnerRadius="42" StartingRotationAngle="0">
                                            <lvc:PieChart.Series>
                                                <lvc:PieSeries Title="DebtPercentage" Values="0" Fill="{StaticResource Green}"/>
                                                <lvc:PieSeries Title="DebtRemainder" Values="100" Fill="{StaticResource Color3}"/>
                                            </lvc:PieChart.Series>
                                        </lvc:PieChart>
                                        <StackPanel HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Foreground="{StaticResource Color5}" 
                                                           FontSize="16" 
                                                           FontFamily="Inter"
                                                           Text="{Binding DebtPercentage}"/>
                                                <TextBlock Foreground="{StaticResource Color5}" 
                                                           FontSize="16" 
                                                           FontFamily="Inter"
                                                           Text="%"/>
                                            </StackPanel>

                                            <TextBlock Foreground="{StaticResource Color4}"
                                                       FontSize="13"
                                                       FontFamily="Inter"
                                                       Text="used"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,-2,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                    
                                    

                                    <StackPanel Margin="20,0,0,0"
                                                VerticalAlignment="Center">
                                        <TextBlock Style="{StaticResource card-header}"
                                                   Text="Debt Usage"/>
                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0,15,0,0">
                                            <TextBlock Style="{StaticResource numbers}"
                                                       Text="Rs. "/>
                                            <TextBlock Style="{StaticResource numbers}"
                                                       Text="{Binding CurrentCustomer.TotalDebt, StringFormat=N2}"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Style="{StaticResource regular-text}"
                                                       Text="of Rs. "/>
                                            <TextBlock Style="{StaticResource regular-text}"
                                                       Text="{Binding DebtLimit, StringFormat=N2}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                                
                            </Border>
                            

                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Background="{StaticResource Color2}" 
                        CornerRadius="8" 
                        Padding="20"
                        Grid.Row="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="20"/>
                        </Grid.RowDefinitions>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Transactions" 
                                            Style="{StaticResource card-header}"
                                            Margin="0,0,0,0"
                                            VerticalAlignment="Center"/>

                                <StackPanel Orientation="Horizontal"
                                            Grid.Column="1"
                                            HorizontalAlignment="Right">
                                    
                                    <Border Background="{StaticResource Color3}"
                                            CornerRadius="6"
                                            Width="200">
                                        <Grid Margin="8,4"
                                              Height="20">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="20"/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <fa:IconImage Icon="Search"
                                                          Foreground="{StaticResource Color4}"
                                                          Height="16"/>
                                            <TextBox Text="{Binding SearchInvoiceText, UpdateSourceTrigger=PropertyChanged}"
                                                     Background="{StaticResource Color3}"
                                                     BorderThickness="0"
                                                     Grid.Column="1"
                                                     Margin="8,0,0,0"
                                                     Foreground="{StaticResource Color4}"
                                                     FontFamily="Inter"
                                                     FontSize="14"/>
                                        </Grid>
                                    </Border>

                                    <!--<customcontrols:Button ButtonText="Filter"
                                                           ButtonBackgroundColor="{StaticResource Color3}"
                                                           ButtonIcon="Filter"
                                                           Margin="10,0,0,0"/>-->
                                </StackPanel>
                            </Grid>
                      
                            <Border BorderBrush="{StaticResource Color3}" 
                                    BorderThickness="0,0,0,1.5" 
                                    Margin="0,20,0,6"
                                    Grid.Row="1">
                                <Grid  Margin="0,0,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.5*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="No."
                                               Style="{StaticResource regular-text}"/>
                                    <TextBlock Text="Invoice No."
                                               Style="{StaticResource regular-text}"
                                               Grid.Column="1"/>
                                    <TextBlock Text="Terms"
                                               Style="{StaticResource regular-text}"
                                               Grid.Column="2"/>
                                    <TextBlock Text="Date"
                                               Style="{StaticResource regular-text}"
                                               Grid.Column="3"/>
                                    <TextBlock Text="Due Date"
                                               Style="{StaticResource regular-text}"
                                               Grid.Column="4"/>
                                    <TextBlock Text="Amount"
                                               Style="{StaticResource regular-text}"
                                               Grid.Column="5"/>
                                    <TextBlock Text="Status"
                                               Style="{StaticResource regular-text}"
                                               Grid.Column="6"/>
                                </Grid>
                            </Border>

                            <ListBox ItemsSource="{Binding Invoices}" 
                                     Background="Transparent"
                                     BorderThickness="0"
                                     BorderBrush="Transparent"
                                     HorizontalContentAlignment="Stretch"
                                     Cursor="Hand"
                                     SelectionMode="Single"
                                     VerticalContentAlignment="Stretch"
                                     Grid.Row="2">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="0.5*"/>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="2*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="{Binding Id}"                   
                                                       Style="{StaticResource regular-text}"/>

                                            <Border Grid.Column="1"
                                                    Background="{StaticResource Color3}"
                                                    CornerRadius="5"
                                                    Padding="6,2,6,2"
                                                    Margin="0,0,20,0"
                                                    Height="25">
                                                <TextBlock Text="{Binding InvoiceNo}"
                                                        Style="{StaticResource button-text}"
                                                        HorizontalAlignment="Center"/>
                                            </Border>

                                            <TextBlock Text="{Binding Terms}"                   
                                                       Style="{StaticResource regular-text}"
                                                       Grid.Column="2"/>

                                            <TextBlock Text="{Binding DateString}"                   
                                                       Style="{StaticResource regular-text}"
                                                       Grid.Column="3"/>

                                            <TextBlock Text="{Binding DueDateString}"                   
                                                       Style="{StaticResource regular-text}"
                                                       Grid.Column="4"/>

                                            <TextBlock Text="{Binding TotalAmount, StringFormat=N2}"                   
                                                       Style="{StaticResource regular-text}"
                                                       Grid.Column="5"/>

                                            <StackPanel Grid.Column="6"
                                                        Orientation="Horizontal">
                                                <TextBlock Text="{Binding Status}"                   
                                                           Style="{StaticResource regular-text}"
                                                           Margin="0,0,8,0"/>
                                                <fa:IconImage Icon="DotCircle"
                                                      Height="14"
                                                      Margin="0,0,4,0">
                                                    <fa:IconImage.Style>
                                                        <Style TargetType="fa:IconImage">
                                                            <Setter Property="Foreground" Value="{StaticResource Green}" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                                                                    <Setter Property="Foreground" Value="{StaticResource Red}" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Pending">
                                                                    <Setter Property="Foreground" Value="{StaticResource Orange}" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Paid">
                                                                    <Setter Property="Foreground" Value="{StaticResource Green}" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </fa:IconImage.Style>
                                                </fa:IconImage>
                                            </StackPanel>

                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <Grid Grid.Row="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Button Style="{StaticResource DiscardButton}"
                                        Content="Previous"
                                        HorizontalAlignment="Left"
                                        Height="20"
                                        Width="60"
                                        Command="{Binding GoToPreviousPageCommand}"/>
                                <StackPanel Orientation="Horizontal"
                                            Grid.Column="1"
                                            HorizontalAlignment="Center">
                                    <TextBlock Style="{StaticResource regular-text}"
                                               Text="Page"
                                               Margin="0,0,6,0"/>
                                    <TextBlock Style="{StaticResource regular-text}"
                                               Text="{Binding PageNumber}"/>
                                </StackPanel>
                                <Button Style="{StaticResource DiscardButton}"
                                        Content="Next"
                                        HorizontalAlignment="Right"
                                        Height="20"
                                        Width="60"
                                        Grid.Column="2"
                                        Command="{Binding GoToNextPageCommand}"/>
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>               
            </Grid>
        </Grid>
    </Grid>
</UserControl>
