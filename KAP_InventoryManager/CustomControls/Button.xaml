<UserControl x:Class="KAP_InventoryManager.CustomControls.Button"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KAP_InventoryManager.CustomControls"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="30">
    <Border x:Name="SearchBorder" BorderBrush="Transparent" BorderThickness="0" CornerRadius="5" Background="{Binding ButtonBackgroundColor}">
        <Button BorderThickness="0" Background="Transparent">
            <StackPanel Orientation="Horizontal" Margin="10,2,10,2" HorizontalAlignment="Center">
                <fa:IconImage
                    Icon="{Binding ButtonIcon}"
                    Foreground="{StaticResource Color5}"
                    Height="12"
                    Margin="0,0,6,0"/>
                <TextBlock  Text="{Binding ButtonText}"
                            FontFamily="Inter"
                            FontSize="12"
                            Foreground="{StaticResource Color5}"
                            VerticalAlignment="Center">
                </TextBlock>
            </StackPanel>
        </Button>
    </Border>
</UserControl>